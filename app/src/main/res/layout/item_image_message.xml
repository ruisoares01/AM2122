<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="17dp"
        android:layout_marginStart="62dp">

        <RelativeLayout
            android:id="@+id/name_root_2"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/nameProfile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:id="@+id/img_root"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="45dp"
                android:layout_height="45dp" />

        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:layout_marginTop="19dp"
        android:layout_marginStart="49dp">

    <RelativeLayout
        android:id="@+id/message_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/rect_round_secondary_color">

        <ImageView
            android:id="@+id/imageView_message_image"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_baseline_image_24"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/textView_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_message_image"
            android:layout_alignEnd="@id/imageView_message_image"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="3/15/2018 3:00 PM" />

    </RelativeLayout>
    </FrameLayout>
</FrameLayout>