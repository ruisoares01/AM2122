<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="90dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:backgroundTint="#F5FFF5"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:elevation="30dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="95dp"
            android:layout_toEndOf="@+id/imageViewUser"
            android:text="JosÃ©"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_latest_message"
            android:layout_width="211dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="89dp"
            android:layout_marginBottom="60dp"
            android:layout_toEndOf="@+id/imageViewUser"
            android:textColor="#5E5E5E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_latest_message_hour"
            android:layout_width="77dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="231dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="60dp"
            android:layout_toEndOf="@+id/imageViewUser"
            android:gravity="center"
            android:textColor="#5E5E5E"
            android:textSize="14sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewUser"
            android:layout_width="77dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="60dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/online_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/imageViewUser"
            android:layout_alignEnd="@+id/imageViewUser"
            android:layout_alignBottom="@+id/imageViewUser"
            android:layout_alignParentStart="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
            android:clickable="true"
            android:cropToPadding="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.526"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>