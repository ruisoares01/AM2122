<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonAddChat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/ic_baseline_add_circle_24"
        android:foreground="@drawable/ic_baseline_add_circle_24"
        android:foregroundTint="@color/Ipca"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonHomeGrupos"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_weight="0.5"
        android:background="@drawable/button_style_3"
        android:text="Grupos"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:theme="@style/Theme.ProjetoAM2"
        app:icon="@drawable/ic_baseline_group_24"
        app:iconGravity="top"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonHomeChats"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonHomeChats"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_weight="0.5"
        android:background="@color/Ipca"
        android:text="Chats"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:textSize="18sp"
        app:icon="@drawable/msgicon"
        app:iconGravity="top"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        app:iconTint="#000000"
        app:layout_constraintEnd_toStartOf="@+id/buttonHomeGrupos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userRecyclerVieww"
        android:layout_width="match_parent"
        android:layout_height="655dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeGrupos"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/user_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>