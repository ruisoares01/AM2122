<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grupoOptionsConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="478dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/rounded_2_corners_menu"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998" />

    <View
        android:id="@+id/touchListener"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00bfbfbf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/closeOptions"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_baseline_close_24"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opcaoGrupo1"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="@+id/closeOptions"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closeOptions">

        <ImageView
            android:id="@+id/opcaoGrupo1Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/ic_baseline_person_outline_24"
            android:backgroundTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/opcaoGrupo1Texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Ver Participantes"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/opcaoGrupo1Icon"
            app:layout_constraintStart_toEndOf="@+id/opcaoGrupo1Icon"
            app:layout_constraintTop_toTopOf="@+id/opcaoGrupo1Icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opcaoGrupo2"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/opcaoGrupo1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/opcaoGrupo1"
        app:layout_constraintTop_toBottomOf="@+id/opcaoGrupo1">

        <ImageView
            android:id="@+id/opcaoGrupo2Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/ic_baseline_calendar_month_24"
            android:backgroundTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/opcaoGrupo2Texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Criar Evento"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/opcaoGrupo2Icon"
            app:layout_constraintStart_toEndOf="@+id/opcaoGrupo2Icon"
            app:layout_constraintTop_toTopOf="@+id/opcaoGrupo2Icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opcaoGrupo3"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/opcaoGrupo1"
        app:layout_constraintStart_toStartOf="@+id/opcaoGrupo1"
        app:layout_constraintTop_toBottomOf="@+id/opcaoGrupo2">

        <ImageView
            android:id="@+id/opcaoGrupo3Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/ic_baseline_calendar_month_24"
            android:backgroundTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/opcaoGrupo3Texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Ver Evento"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/opcaoGrupo3Icon"
            app:layout_constraintStart_toEndOf="@+id/opcaoGrupo3Icon"
            app:layout_constraintTop_toTopOf="@+id/opcaoGrupo3Icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opcaoGrupo4"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/opcaoGrupo3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/opcaoGrupo3"
        app:layout_constraintTop_toBottomOf="@+id/opcaoGrupo3">

        <ImageView
            android:id="@+id/opcaoGrupo4Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/ic_baseline_exit_to_app_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/opcaoGrupo4Texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Sair do Grupo"
            android:textColor="#CD5050"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/opcaoGrupo4Icon"
            app:layout_constraintStart_toEndOf="@+id/opcaoGrupo4Icon"
            app:layout_constraintTop_toTopOf="@+id/opcaoGrupo4Icon"
            app:layout_constraintVertical_bias="0.363" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opcaoGrupo5"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/opcaoGrupo6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/opcaoGrupo6"
        app:layout_constraintTop_toBottomOf="@+id/opcaoGrupo6">

        <ImageView
            android:id="@+id/opcaoGrupo5Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/ic_baseline_remove_circle_24"
            android:backgroundTint="#CD5050"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/opcaoGrupo5Texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Eliminar Grupo"
            android:textColor="#CD5050"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/opcaoGrupo5Icon"
            app:layout_constraintStart_toEndOf="@+id/opcaoGrupo5Icon"
            app:layout_constraintTop_toTopOf="@+id/opcaoGrupo5Icon"
            app:layout_constraintVertical_bias="0.363" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opcaoGrupo6"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/opcaoGrupo3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/opcaoGrupo3"
        app:layout_constraintTop_toBottomOf="@+id/opcaoGrupo4">

        <ImageView
            android:id="@+id/opcaoGrupo6Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/ic_baseline_settings_24"
            android:backgroundTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/opcaoGrupo6Texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Gerir Grupo"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/opcaoGrupo6Icon"
            app:layout_constraintStart_toEndOf="@+id/opcaoGrupo6Icon"
            app:layout_constraintTop_toTopOf="@+id/opcaoGrupo6Icon"
            app:layout_constraintVertical_bias="0.363" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>